# =====================================================================
# WellKorea ERP - Environment Configuration Template
# =====================================================================
# This file contains all environment variables for local development.
# Copy this file to .env and customize values for your environment.
#
# Spring Profiles:
#   dev   - Local development with safe defaults (auto-activated with docker-compose)
#   test  - Integration tests with Testcontainers (auto-activated by tests)
#   prod  - Production deployment (requires ALL environment variables)
#
# IMPORTANT:
#   - Never commit .env to version control
#   - For production: Use secrets management (AWS Secrets Manager, Azure Key Vault, etc.)
# =====================================================================

# Spring Profile (dev | test | prod)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
POSTGRES_DB=wellkorea_erp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8080
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/wellkorea_erp
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# MinIO S3 Storage Configuration
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_URL=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=wellkorea-erp-documents

# JWT Configuration (MVP - will be replaced by Keycloak)
# REQUIRED in prod: Minimum 256 bits (32 bytes)
# Default provided by 'dev' profile, but can be overridden here
JWT_SECRET=dev-secret-key-minimum-256-bits-required-for-hs256-algorithm-do-not-use-in-production
JWT_EXPIRATION=86400000

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password

# Security Configuration
# CORS: Comma-separated list of allowed origins
SECURITY_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173,http://localhost:3000
# Swagger: Enable OpenAPI documentation (true for dev/staging, false for prod)
SECURITY_SWAGGER_ENABLED=true

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=http://localhost:8080
